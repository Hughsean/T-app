{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "T-App",
  "version": "0.1.0",
  "identifier": "dev.hughsean",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "情感干预客户端",
        "width": 800,
        "height": 600,
        "center": true,
        "maximized": true,
        "label": "main",
        "visible": false,
        "devtools": true
      },
      {
        "title": "设置",
        "resizable": false,
        "width": 800,
        "height": 600,
        "center": true,
        "maximized": false,
        "label": "settings",
        "visible": false,
        "minimizable": false,
        "url": "settings.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}